<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Schizophrenia">

    <TextView
        android:id="@+id/Schizophrenia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Schizophrenia"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="144dp"
        android:layout_height="148dp"
        android:layout_below="@id/textView5"
        android:layout_alignEnd="@+id/Schizophrenia_explore"
        android:layout_alignParentTop="true"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="-20dp"
        app:srcCompat="@drawable/autism_brain" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="385dp"
        android:layout_height="236dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-231dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/imageView14"
        android:gravity="center_horizontal"
        app:srcCompat="@drawable/schizophrenia" />

    <Button
        android:id="@+id/Schizophrenia_explore"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Explore" />

    <Button
        android:id="@+id/Schizophrenia_symptoms"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Schizophrenia_explore"
        android:layout_alignStart="@+id/Schizophrenia_explore"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Symptoms" />

    <Button
        android:id="@+id/Schizophrenia_therapy"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Schizophrenia_symptoms"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Therapy" />

    <Button
        android:id="@+id/Schizophrenia_forum"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Schizophrenia_therapy"
        android:text="Forum" />


</RelativeLayout>