<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorProfile"
    tools:context=".ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/my_profile_pic"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="2dp"
                android:src="@drawable/profile_white" />

            <TextView
                android:id="@+id/my_profilename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="2dp"
                android:layout_below="@id/my_profile_pic"
                android:layout_marginTop="15dp"
                android:text="Profile name"
                android:gravity="center"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="36dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/my_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_profilename"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-8dp"
                android:gravity="center"
                android:padding="5dp"
                android:drawableLeft="@drawable/username"
                android:drawablePadding="3dp"
                android:text="Rsername"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/my_status"
                android:layout_width="195dp"
                android:layout_height="51dp"
                android:layout_below="@id/my_username"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="user status"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:textSize="20dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/my_country"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/country"
                android:drawablePadding="3dp"
                android:padding="5dp"
                android:layout_below="@id/my_status"
                android:layout_marginTop="30dp"
                android:text="Country"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="18dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/my_dob"
                android:layout_width="150dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_country"
                android:drawableLeft="@drawable/calender"
                android:drawablePadding="3dp"
                android:padding="5dp"
                android:layout_marginTop="8dp"
                android:text="Date of Birth"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/design_default_color_on_primary"
                android:textSize="18dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/my_gender"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_dob"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/gender"
                android:drawablePadding="3dp"
                android:padding="5dp"
                android:layout_marginTop="8dp"
                android:text="Gender"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="@color/design_default_color_on_primary"
                android:textSize="19dp"
                android:textStyle="normal" />
            <ImageView
                android:id="@+id/my_trophy"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/my_gender"
                android:src="@drawable/trophy_green"/>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>