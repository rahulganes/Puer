<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#32995f">

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/nav_profile_image"
        android:layout_width="122dp"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="67dp"
        android:src="@drawable/profile_white"
        app:civ_border_color="#fff"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/nav_user_full_name"
        android:layout_width="143dp"
        android:layout_height="57dp"
        android:layout_below="@id/nav_profile_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="66dp"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="2dp"
        android:gravity="center_horizontal"
        android:text="UserName"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="22dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/allstar"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignStart="@+id/nav_user_full_name"
        android:layout_alignParentTop="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="5dp"
        app:srcCompat="@drawable/star" />

    <TextView
        android:id="@+id/allstarcontrib"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="38dp"
        android:gravity="center"
        android:text="All-Star Contributor"
        android:textColor="#fff"
        android:textSize="13sp"
        android:textStyle="bold" />

</RelativeLayout>