<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#deeff5"
    android:layout_height="match_parent"
    tools:context=".setupActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setup_profile_image"
        android:layout_width="85dp"
        android:layout_height="82dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        app:civ_border_width="2dp"
        android:clickable="true"
        android:focusable="true"
        app:civ_border_color="#ffff"
        android:src="@drawable/add_profile_picture"></de.hdodenhof.circleimageview.CircleImageView>

    <EditText
        android:id="@+id/setup_user_name"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:background="@drawable/inputs"
        android:drawablePadding="10dp"
        android:padding="7dp"
        android:drawableLeft="@drawable/username"
        android:hint="UserName"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/setup_full_name"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:layout_below="@id/setup_user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/inputs"
        android:drawableLeft="@drawable/name"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:padding="7dp" />

    <EditText
        android:id="@+id/setup_country_name"
        android:layout_width="312dp"
        android:drawablePadding="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/setup_full_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/inputs"
        android:drawableLeft="@drawable/country"
        android:ems="10"
        android:hint="Country Name"
        android:inputType="textPersonName"
        android:padding="7dp" />

    <Button
        android:id="@+id/setup_save_btn"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/setup_country_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button"
        android:text="Save"
        android:elevation="3dp"
        android:clickable="true"
        android:focusable="true"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/change_DP_setup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setup_profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:text="add profile picture" />
</RelativeLayout>